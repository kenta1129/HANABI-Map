<% if @model == 'user' %>
    <h3 style="color: white;">Users search for "<%= @content %>"</h3>
  <%= render 'public/users/index', users: @records %>
<% elsif @model == 'post' %>
    <h3 style="color: white;">Posts search for "<%= @content %>"</h3>
  <%= render 'public/posts/index', posts: @records %>
<% end %>