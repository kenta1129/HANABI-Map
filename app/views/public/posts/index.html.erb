<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>投稿一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>ユーザーネーム</th>
            <th>店名</th>
            <th>内容</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.user.get_profile_image, size: "50x50" %></td>
              <td><%= post.user.name %></td>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td id="favorite_btn_<%= post.id %>">
          <%= render "public/favorites/btn", post: post %>
          </td>
              <td><%= link_to "投稿詳細", post_path(post.id), class: "btn btn-info btn-sm" %></td>
              <% if post.user == current_user %>
                <td><%= link_to "投稿編集", edit_post_path(post.id), class: "btn btn-warning btn-sm" %></td>
                <td><%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger btn-sm" %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts, class: 'pagination' %>
    </div>
  </div>
</div>
