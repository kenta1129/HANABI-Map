<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Posts</h1>
      <table class="table">
        <thead>
          <tr>
            <th>プロフィール画像</th>
            <th>ユーザーネーム</th>
            <th>店名</th>
            <th>内容</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= image_tag post.user.get_profile_image, size: "50x50" %></td>
              <td><%= post.user.name %></td>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= link_to "Show", post_path(post.id) %></td>
              <% if post.user == current_user %>
                <td><%= link_to "Edit", edit_post_path(post.id) %></td>
                <td><%= link_to "Destroy", post_path(post), method: :delete, data: { confirm: "本当に消しますか？" } %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
