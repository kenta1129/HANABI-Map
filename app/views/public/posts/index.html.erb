<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Posts</h1>
      <table>
        <tbody>
          <% @posts.each do |post| %>
            <div>
              <p>本文：<%= post.body %></p>
              <p>ユーザーネーム：<%= post.user.name %></p>
            </div>
            <%= link_to "Show", post_path(post.id) %>
            <% if post.user == current_user %>
              <%= link_to "Edit", edit_post_path(post.id) %>
              <%= link_to "Destroy", post_path(post), method: :delete, data: {confirm: "本当に消しますか？"} %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>