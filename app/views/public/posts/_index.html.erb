<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.user.name,user_path(post.user) %></td>
        <td><%= post.body %></td>
        <td><%= render "post_comments/counter", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>