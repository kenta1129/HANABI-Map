<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
     <% posts.each do |post| %>
      <tr>
        <td><%= link_to(post.user) do %>
          <%= image_tag post.user.get_profile_image, size:'10x10' %>
          <% end %>
        </td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td id="favorite_btn_<%= post.id %>">
        <%= render "public/favorites/btn", post: post %>
        </td>
        <td><%= render "public/post_comments/counter", post: post %></td>
      </tr>
    <% end %>
  </tbody>
</table>