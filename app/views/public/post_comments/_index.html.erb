<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to post.body, post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td>コメント数： <%= post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
