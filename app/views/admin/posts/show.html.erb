<div class='container'>
  <div class='row'>
    <h3><%= @post.user.name %>さんの投稿詳細</h3>
    <div class='col-md-10 offset-md-1'>
      <table class='table'>
        <tr>
          <td><%= @post.user.name %></td>
          <td><%= @post.title %></td>
          <td><%= @post.body %></td>
          <td class="post-comments-counter">
            <%= render "admin/post_comments/counter", post: @post %>
          </td>
          <td>
             <%= link_to "削除", admin_post_path(@post), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-sm btn-danger destroy_post_#{@post.id}" %>
          </td>
        </tr>
      </table>
      <div class="post-comments-index">
        <%= render "admin/post_comments/index", post: @post %>
      </div>
    </div>
  </div>
</div>
