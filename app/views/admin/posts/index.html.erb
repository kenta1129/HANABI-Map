<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h1>Posts</h1>
      <table>
        <tbody>
          <% @posts.each do |post| %>
           <div>
             　<p>店名：<%= post.title %></p>
                <p>内容：<%= post.body %></p>
                <p>ユーザーネーム：<%= post.user.name %></p>
                </div>
                <%= link_to "Show", admin_post_path(post.id) %>
                <%= link_to "Destroy", admin_post_path(post), method: :delete, data: { confirm: "本当に消しますか？" } %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
