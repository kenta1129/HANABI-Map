<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
     
      <table class="table">
        <thead>
          <tr>
            <th>ユーザーネーム</th>
            <th>店名</th>
            <th>内容</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.user.name %></td>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= link_to "詳細", admin_post_path(post.id), class: "btn btn-info btn-sm" %></td>
              <td><%= link_to "削除", admin_post_path(post), method: :delete, data: { confirm: "本当に消しますか？" }, class: "btn btn-danger pull-right" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @posts, class: 'pagination' %>
