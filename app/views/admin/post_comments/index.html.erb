<div class="container mt-5">
<table class="table mt-3 text-white">
  <tr>
    <th class="col-2">名前</th>
    <th class="col-8">コメント</th>
    <th class="col-1"></th>
    <th class="col-1"></th>
  </tr>
<% @post_comments.each do |post_comment| %>
  <tr>
    <td class="col-2"><%= @users.find(post_comment.user_id).name %></td>
    <td class="col-8"><%= post_comment.comment %></td>
    <td class="col-1"><%= post_comment.created_at.strftime("%Y年%m月%d日") %></td>
    <td class="col-1">
    <%= link_to '削除', admin_post_comment_path(post_comment), method: :delete, data: { confirm: '本当に削除しますか?' },class: "btn btn-sm btn-danger" %>
    </td>
  </tr>
<% end %>
</table>

</div>